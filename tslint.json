{
  "extends": "tslint-config-prettier",
  "rules": {
    "quotemark": [true, "single", "jsx-single", "avoid-escape"],
    "semicolon": [true, "always"],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ]
  }
}
